algoritmo "somar dois valores(sem variavel para atribuir retorno)"
var
   V1, V2: Inteiro

funcao Soma (X, Y: Inteiro): Inteiro
inicio
      Retorne X + Y
fimfuncao

inicio
   Escreva ("Digite um valor: ")
   Leia (V1)
   Escreva ("Digite outro valor: ")
   Leia (V2)
   Escreval ("A soma dos valores e ", Soma(V1, V2))
fimalgoritmo
